@{
    ViewData["Title"] = "Form";
    
}
 @model mission06_nathanck.Models.ApplicationResponse
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="MovieCategoryId">Genre:</label>
        <select asp-for="MovieCategoryId" required>
            <option value="">Select Genre</option>
            @foreach (MovieCategory m in ViewBag.Movies)
            {
                <option value="@m.Id">@m.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required />
        <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" required />
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Note">Notes:</label>
        <input asp-for="Note" maxlength="25" />
        <br />
        <input type="hidden" asp-for="MovieId" />

        <button type="submit">Submit</button>
    </form>
</div>
